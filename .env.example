NODE_ENV=development
PORT=3001

# ── DEMO MODE ──────────────────────────────────────────────────────────────────
# Con DEMO_MODE=true no se necesitan credenciales reales.
# Los datos de underwriting (Syntage, Places, Bureau, Platform) se generan
# automáticamente con valores realistas. El flujo completo funciona end-to-end.
DEMO_MODE=true

# Umbral de ingresos mensuales (MXN) para evaluación de underwriting
APPROVAL_THRESHOLD=50000

# ── Syntage API (solo necesario si DEMO_MODE=false) ───────────────────────────
SYNTAGE_BASE_URL=https://api.syntage.com
SYNTAGE_API_KEY=
SYNTAGE_TIMEOUT_MS=10000

# ── Google Places API (solo necesario si DEMO_MODE=false) ─────────────────────
# Habilitar en: https://console.cloud.google.com → APIs → Places API (Legacy)
GOOGLE_PLACES_API_KEY=

# ── Facebook / Instagram OAuth (solo necesario si DEMO_MODE=false) ────────────
# Crear en: https://developers.facebook.com/apps → tipo "Autenticar y solicitar datos"
# Permisos necesarios: pages_show_list, pages_read_engagement, instagram_basic, business_management
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# ── Twilio Lookup (solo necesario si DEMO_MODE=false) ─────────────────────────
# Crear en: https://console.twilio.com → Account Info
# Habilitar: Lookup v2 API + Identity Match + SIM Swap add-ons
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# ── GCP (solo necesario si DEMO_MODE=false) ───────────────────────────────────
GCP_PROJECT_ID=

# ── URLs ──────────────────────────────────────────────────────────────────────
FRONTEND_URL=http://localhost:3000
